<div id="watterfall">
	<div class="container">
		<div class="row">
			<div class="col-xl-12 col-md-12 mt-4 mb-4" v-for="instopic in store.explore" :key="instopic.id">
				<div class="card border-0 shadow">
					<img :src="instopic.picture" class="card-img-top" alt="instopic">
					<div class="card-body text-center">
						<div class="row">
							<div class="col d-flex flex-row align-items-center">
								<img :src="instopic.avatar" class="card-img-top p-2" alt="" style="float:left; width:50px; height:50px; border-radius: 50%;">
								<span class="card-text text-black-50 p-2">{{ instopic.name }}</span>
							</div>
							<div class="col d-flex flex-row align-items-center">
								<div class="card-text p-2">{{ instopic.description }}</div>
							</div>
							<div class="col text-center d-flex flex-row align-items-center justify-content-end">
								<button @click="follow(instopic.user_id)" class="btn btn-outline-danger p-2" style="float:right;">Unfollow</button>
							</div>
						</div>
					</div>
				</div>
    	</div>
		</div>
	</div>
</div>

<%= javascript_include_tag 'waterfall', 'data-turbolinks-track': 'reload',
'type': 'module' %>
