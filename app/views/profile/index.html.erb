<div id="profile">
	<img :src="store.user.avatar" />
	<div>{{ store.user.name }}</span>
	<div>{{ store.user.phone }}</div>
	<div>{{ store.user.age }}</div>
	<div>{{ store.user.sex }}</div>
	<div v-for="intopic in store.user.instopics">
		<img :src="intopic.picture" width="300" height="300">
		<div>{{intopic.description}}</div>
	</div>
	<form @submit.prevent="submitEditUser">
		<input @change="selectedUserAvatar($event)" type="file" name="avatar" />
		<input v-model="formUser.name" type="text" />
		<input v-model="formUser.age" type="number" />
		<input v-model="formUser.sex" type="text" />
		<button type="submit">Edit user</button>
	</form>
	<form @submit.prevent="submitAddInstopic">
		<input @change="selectedInstopic($event)" type="file" name="avatar" />
		<input v-model="selectedInstopic.description" type="text" />
		<button type="submit">Add instopic</button>
	</form>
</div>
<%= javascript_include_tag 'profile', 'data-turbolinks-track': 'reload', 'type':
'module' %>
