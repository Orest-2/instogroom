<div class="container" style="margin-top: 8rem;">
	<div class="d-flex justify-content-center align-self-center">
		<div class="fields p-5">
			<h2 style="font-size: 4rem">Instogroom</h2>
			<span class="label">Forgot your password?</span>
			<hr>
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>

			<div class="field mt-4">
				<%= f.label :email, for: "emailInput", class: "label" %><br />
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "emailInput" %>
			</div>

			<div class="actions mt-2">
				<%= f.submit "Send me reset password instructions", class: "btn-sm btn-block btn btn-warning label" %>
			</div>
			<% end %>
			<div class="mt-4">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>
