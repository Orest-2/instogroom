
<div class="fields">
<h2 style="font-size: 4rem">Instogroom</h2>
<pre>Log in to see photos and 
videos from your friends</pre>
<hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
     <label class="lable" for="emailInput">Email address</label>
    <input type="email" class="form-control" id="emailInput" placeholder="name@example.com">
  </div>

  <div class="field">
    <label class="lable" for="inputPassword" class="col-sm-2 col-form-label">Password</label>
      <input type="password" class="form-control" id="inputPassword" placeholder="Password">
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="check">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions ">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
