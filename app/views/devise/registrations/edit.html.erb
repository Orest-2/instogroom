<div class="container" style="margin-top: 8rem;">
	<div class="d-flex justify-content-center align-self-center">
		<div class="fields p-5">
			<h2 style="font-size: 4rem">Instogroom</h2>
			<span class="label">Edit <%= resource_name.to_s.humanize %></span>
			<hr>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
			<%= render "devise/shared/error_messages", resource: resource %>

			<div class="field mt-4">
				<%= f.label :email, for: "emailInput", class: "label" %><br />
				<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "emailInput" %>
			</div>

			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
			<% end %>

			<div class="field mt-4">
				<%= f.label :password, for: "inputPassword", class: "label" %><br />
				<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> characters minimum)</em>
				<% end %><br />
				<%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "inputPassword" %>
			</div>

			<div class="field mt-4">
				<%= f.label :password_confirmation, for: "inputPassword", class: "label" %><br />
				<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "inputPassword" %>
			</div>

			<div class="field mt-4">
				<%= f.label :current_password, for: "inputPassword", class: "label" %> <i>(we need your current password to confirm your changes)</i><br />
				<%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", id: "inputPassword" %>
			</div>

			<div class="actions mt-2">
				<%= f.submit "Update", class: "btn-sm btn-block btn btn-warning label" %>
			</div>
			<% end %>
			<div class="mt-4">
				<h3>Cancel my account</h3>

				<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

				<%= link_to "Back", :back %>
			</div>
		</div>
	</div>
</div>